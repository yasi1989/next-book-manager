generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id       String   @id @default(uuid())
  user     User     @relation(fields: [userId], references: [id])
  userId   String
  title    String
  author   String
  year     DateTime @default(now())
  status   String   @default("Available")
  coverUrl String?
}

model User {
  id    String  @id @default(uuid())
  name  String?
  Books Book[]
}
